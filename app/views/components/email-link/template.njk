{%- if params.href %}
<div class="app-c-email-link {{- ' ' + params.classes if params.classes }}" {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  {%- if params.heading.html %}
    {{- params.heading.html -}}
  {% else %}
    <h{{ params.headingLevel | default(2) }} class="govuk-heading-m {{- ' ' + params.heading.classes if params.heading.classes }}">{{- params.heading.text | default('What you need to do may change') -}}</h{{ params.headingLevel | default(2) }}>
  {% endif -%}
  <svg class="app-c-email-link__icon" xmlns="http://www.w3.org/2000/svg" height="21" width="18" viewBox="0 0 18 21">
    <path d="M7.05,19.01C7.05,20.11,7.92,21,9,21c1.08,0,1.95-0.89,1.95-1.99H7.05z M15.73,14.82V9c0-3.25-2.2-5.97-5.18-6.69V1.59C10.56,0.71,9.86,0,9,0C8.14,0,7.44,0.71,7.44,1.59v0.72C4.47,3.03,2.27,5.75,2.27,9v5.82l-2.08,2.12V18h17.62v-1.06L15.73,14.82z"></path>
  </svg>
  <a href="{{ params.href }}" class="app-c-email-link__link {{- ' ' + params.link.classes if params.link.classes }}" {%- for attribute, value in params.link.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {{- params.link.html | safe if params.link.html else params.link.text | default('Sign up for updates') -}}
  </a>
</div>
{% endif -%}
